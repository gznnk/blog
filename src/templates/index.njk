{% extends "base.njk" %}

{% block content %}
<article>
    <h1>{{ post.title }}</h1>
    <time datetime="{{ post.date }}">{{ post.date }}</time>
    {% if post.tags and post.tags.length > 0 %}
    <div class="tags">
        {% for tag in post.tags %}
        <span class="tag">{{ tag }}</span>
        {% endfor %}
    </div>
    {% endif %}
    {{ content | safe }}
</article>
{% endblock %}

{% extends "base.njk" %}

{% block content %}
<article>
    <h1>{{ post.title }}</h1>
    <time datetime="{{ post.date }}">{{ post.formattedDate }}</time>
    {% if post.tags and post.tags.length > 0 %}
    <div class="tags">
        {% for tag in post.tags %}
        <span class="tag">{{ tag }}</span>
        {% endfor %}
    </div>
    {% endif %}
    {{ content | safe }}
    {% if i18n.translationNotice and originalLangUrl %}
    <div class="translation-notice">
        <p>{{ i18n.translationNotice }}</p>
        <p><a href="{{ originalLangUrl }}" class="original-link">{{ i18n.originalArticle }}</a></p>
    </div>
    {% endif %}
</article>
{% endblock %}
